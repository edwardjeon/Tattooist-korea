<!-- 업체정보 -->


<main id="main">
    
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>업체정보</h2>
          <ol>
            <li><a href="home">Home</a></li>
            <li>업체정보</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->
    
    <section class="my-form">
        <div class="cotainer">
            <div class="row justify-content-center">
                <div class="col-md-4">
                        <div class="card">
                            <div class="card-header text-center" text-align="center">업체정보</div>
                            <div class="card-body">

                                <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                                
                                    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                                
                                    <%= f.error_notification %>
                                
                                    <div class="form-inputs">
                                        <div class="form-group">
                                            <%= f.input :email, required: false, autofocus: true, label: "이메일", disabled: true, input_html: { class:"form-control" } %>

                                            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                                                <p><%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %></p>
                                            <% end %>
                                        </div>
                                        
                                        <div class="form-group">
                                            <%= f.input :name, 
                                                        required: false, 
                                                        label: "이름",
                                                        input_html: { class:"form-control", autocomplete: "name" } %>
                                        </div>
                                        
                                        <div class="form-group">
                                            <%= f.input :phone, 
                                                        required: false, 
                                                        label: "연락처",
                                                        input_html: { class:"form-control", autocomplete: "phone" } %>
                                        </div>
                                        
                                        <div class="form-group">
                                            <%= f.input :service, 
                                                        required: false, 
                                                        label: "가입된 서비스",
                                                        disabled: true,
                                                        input_html: { class:"form-control", autocomplete: "service" } %>
                                        </div>
                                        
                                        <div class="form-group">
                                            <%= f.input :service_period, 
                                                        required: false, 
                                                        label: "서비스 유효기간",
                                                        disabled: true,
                                                        input_html: { class:"form-control", autocomplete: "service_period" } %>
                                        </div>
                                        
                                        <div class="form-group">
                                            <%= f.input :password,
                                                        hint: t(".leave_blank_if_you_don_t_want_to_change_it"),
                                                        required: false,
                                                        label: "새 비밀번호",
                                                        input_html: { autocomplete: "new-password", class:"form-control" } %>                                            
                                        </div>
                                        
                                        <div class="form-group">
                                            <%= f.input :password_confirmation,
                                                        required: false,
                                                        label: "새 비밀번호 확인",
                                                        input_html: { autocomplete: "new-password", class:"form-control" } %>
                                        </div>
                                        
                                        <div class="form-group">
                                            <%= f.input :current_password,
                                                        hint: t(".we_need_your_current_password_to_confirm_your_changes"),
                                                        required: false,
                                                        label: "현재 비밀번호",
                                                        input_html: { autocomplete: "current-password", class:"form-control" } %>
                                        </div>
                                    </div>

                                    <div class="form-actions">
                                        <%= f.button :submit, "업체정보 변경", class: "btn btn-primary", style:"width:100%;" %>
                                    </div>
                                <% end %>

                                <!-- <%= link_to t(".cancel_my_account"), registration_path(resource_name), data: { confirm: t(".are_you_sure") }, method: :delete %></p> -->

                                <%= link_to t("devise.shared.links.back"), :back %>      
                                
                            </div>
                        </div>
                </div>
            </div>
        </div>

    </section>

</main>

