<!-- 로그인 -->

<!-- ======= Main ======= -->
<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center">
          <h2>업체 로그인</h2>
          <ol>
            <li><a href="home">Home</a></li>
            <li>로그인</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->


    <section class="my-form">
        <div class="cotainer">
            <div class="row justify-content-center">
                <div class="col-md-4">
                        <div class="card">
                            <div class="card-header text-center" text-align="center">업체 로그인</div>
                            <div class="card-body">
                              <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">  
                                <div class="form-inputs">
                                    <div class="form-group">
                                        <%= f.input :email,
                                                label: false,
                                                placeholder: "이메일",
                                                required: false,
                                                autofocus: true,
                                                input_html: { class:"form-control", autocomplete: "email" } %>
                                    </div>
                                    <div class="form-group">
                                        <%= f.input :password,
                                                label: false,
                                                placeholder: "비밀번호",
                                                required: false,
                                                input_html: { class:"form-control", autocomplete: "current-password" } %>
                                    </div>
                                    <div class="form-group">
                                        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                                    </div>
                                    
                                  </div>

                                  <div class="form-actions">
                                      <%= f.button :submit, "로그인", class: "btn btn-primary", style:"width:100%;" %>
                                  </div>
                                <% end %>

                                <%= render "devise/shared/links" %>
                                
                        </div>
                </div>
            </div>
        </div>

    </section>

    <script>

        function loginform() {

            var userId = document.forms["my-form"]["userid"].value;
            var password1 = document.forms["my-form"]["password"].value;

            if (userId == "")
            {
                alert("아이디를 입력해주세요!");
                return false;
            }
            else if (password1 == "")
            {
                alert("아이디를 입력해주세요!");
                return false;
            }            

        }

    </script>

</main><!-- End #main -->

