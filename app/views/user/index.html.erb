    <section class="my-form">
        <div class="cotainer">
            <div class="row justify-content-center">
                <div class="col-md-6">
                        <div class="card">
                            <div class="card-header text-center" text-align="center">업체 회원가입</div>
                            <div class="card-body">
                                <form name="my-form" onsubmit="return validform()" action="/register" method="post">
                                    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
                                    <div class="form-group">
                                        <div class="text-center">
                                            <input type="text" id="userid" class="form-control" name="userid" placeholder="아이디">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="text-center">
                                            <input type="password" id="password" name="password" class="form-control" placeholder="비밀번호(4~12자)">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="text-center">
                                            <input type="password" id="password2" class="form-control" placeholder="비밀번호 확인">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="text-center">
                                            <input type="text" id="name" class="form-control" name="name" placeholder="이름">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="text-center">
                                            <input type="text" id="email" class="form-control" name="email" placeholder="이메일">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="text-center">
                                            <input type="text" id="phone" name="phone" class="form-control" placeholder="연락처">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary" text-align="center" style="width:100%;">회원가입</button>
                                        </div>
                                    </div>
                                    
                                    <div class="form-group">
                                        <div class="text-center">
                                            <button type="reset" class="btn btn-danger" text-align="center" style="width:100%;">취소하기</button>
                                        </div>                                        
                                    </div>

                                </form>
                            </div>
                        </div>
                </div>
            </div>
        </div>

    </section>
         
    <script>

        function validform() {

            // var a = document.forms["my-form"]["full-name"].value;
